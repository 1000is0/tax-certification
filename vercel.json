{
  "version": 2,
  "installCommand": "npm ci && cd frontend && npm ci",
  "buildCommand": "cd frontend && npm run build",
  "functions": {
    "api/index.js": { "memory": 512, "maxDuration": 10 }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/frontend/dist/index.html" }
  ]
}


