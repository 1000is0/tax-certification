{
  "version": 2,
  "installCommand": "npm install && cd frontend && npm install",
  "buildCommand": "npm run build:frontend",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/index.js": {
      "memory": 512,
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/frontend/dist/$1" }
  ]
}


