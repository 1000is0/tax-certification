{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" }
  ],
  "crons": [
    {
      "path": "/api/subscriptions/renew",
      "schedule": "0 15 * * *"
    },
    {
      "path": "/api/subscriptions/expire",
      "schedule": "0 15 * * *"
    },
    {
      "path": "/api/subscriptions/renew",
      "schedule": "0 * * * *"
    }
  ]
}


